# ========================================
# CO2e Portal - Frontend Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:5001

# Stripe Configuration (if needed for frontend)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Application Configuration
REACT_APP_NAME=CO2e Portal
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Carbon Emissions Portal

# Development Configuration
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=false

# External Services (if needed)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# ========================================
# IMPORTANT NOTES:
# ========================================
# 1. All variables must start with REACT_APP_
# 2. Changes require restarting the development server
# 3. Never commit .env files to version control
# 4. Use different values for development and production
